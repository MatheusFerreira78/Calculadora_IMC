<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:textColor="@color/purple_700"
        android:text="Seu IMC é:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        tools:text="27.01"/>

    <TextView
        android:id="@+id/textview_classificacao"
        tools:text="Classificação: Normal"
        android:textSize="22sp"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Veja a tabela seguinte sobre IMC:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="30sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menor que 18,5 e  Abaixo do Peso" />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entre 18,5 e 24,9 Normal" />

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entre 25 e 29,9 Sobrepeso" />

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entre 30 e 39,9 Obesidade" />

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maior que 40 Obesidade Grave" />

</LinearLayout>